@model StudyAbroad.Models.Course

@{
    ViewData["Title"] = "Add Program";
}

<div class="my-5 p-5">
    <div class="cover px-5 mx-auto" style="max-width: 1500px;">
        <h1 class="mt-5 text-center">@ViewData["Title"]</h1>
        <hr />

        <form asp-action="Create" style="max-width: 1200px;" class="mx-auto my-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Program Name</label>
                <input asp-for="Name" class="form-control" placeholder="Exchange Program" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="InstitutionID" class="control-label">Institution</label>
                <select asp-for="InstitutionID" class="form-control" asp-items="ViewBag.InstitutionID">
                    <option value="">Select the institution:</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ContactHours" class="control-label"></label>
                <input asp-for="ContactHours" class="form-control" placeholder="20" />
                <span asp-validation-for="ContactHours" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Duration" class="control-label">Duration (weeks)</label>
                <input asp-for="Duration" class="form-control" placeholder="52" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Tuition" class="control-label">Tuition $</label>
                <input asp-for="Tuition" class="form-control" placeholder="8900" />
                <span asp-validation-for="Tuition" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Prerequisites" class="control-label"></label>
                <input asp-for="Prerequisites" class="form-control" placeholder="TOEFL 120 or higher" />
                <span asp-validation-for="Prerequisites" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group text-end">
                <input type="submit" value="Create" class="btn btn-outline-danger" />
                <a class="btn btn-outline-light" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    body {
        font-family: monospace;
        color: white;
        background-image: url("../images/course.jpg");
        background-size: cover;
    }

    h1 {
        font-weight: bold;
        text-shadow: 2px 2px black;
    }
</style>
