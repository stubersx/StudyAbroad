@model StudyAbroad.Models.Institution

@{
    ViewData["Title"] = Model.Name;
}

<div class="my-5 p-5">
    <div class="cover px-5 mx-auto" style="max-width: 1500px;">
        <h1 class="mt-5 text-center">@ViewData["Title"]</h1>
        <hr />

        <dl style="max-width: 1200px;" class="mx-auto my-5 row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Education)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Education)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Type)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Country)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Region)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Region)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.URL)
            </dt>
            <dd class="col-sm-8">
                <a target="_blank" href="@Html.DisplayFor(model => model.URL)">@Html.DisplayFor(model => model.URL)</a>
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Note)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Note)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DormAvailable)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DormAvailable)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.MealPlanAvailable)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.MealPlanAvailable)
            </dd>
        </dl>
        <div class="text-end">
            <a class="btn btn-outline-danger" asp-action="Edit" asp-route-id="@Model?.InstitutionID">Edit</a> |
            <a class="btn btn-outline-light" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

<style>
    body {
        font-family: monospace;
        color: white;
        background-image: url("/../images/uni.jpg");
        background-size: cover;
    }

    h1 {
        font-weight: bold;
        font-style: italic;
        text-shadow: 2px 2px black;
    }
</style>